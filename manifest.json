{
    "manifest_version": 2,
    "name": "Slop Farmer",
    "version": "0.1",

    "description": "Crowd-source AI slop pages and domains",

    "page_action": {
        "default_icon": "icons/virus-slash.png",
        "default_title": "report slop"
    },

    "background": {
        "scripts": ["scripts/report-slop.js"],
        "persistent": false,
        "type": "module"
    },

    "content_scripts": [
        {
            "matches": ["*://*.duckduckgo.com/*"],
            "js": ["scripts/hide-slop.js"]
        }
    ]
}