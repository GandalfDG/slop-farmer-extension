{
    "include": [
        "src/**/*",
        "node_modules/altcha/*",
        "node_modules/@coderundebug/indexeddb-promise/*"    
    ],
    
    "compilerOptions": {
        "allowJs": true,
        "outDir": "scripts",
        "lib": ["ES7", "DOM"],
        
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        
        "sourceMap": true,
        
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "indexeddb-promise/*": ["node_modules/@coderundebug/indexeddb-promise/*"]
        },
        "module": "nodenext",

    }
}